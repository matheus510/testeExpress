mixin cabecalhoPadrao(bookData)
    table(cellspacing='0', cellpadding='0', width='100%')
    tr
        td.template-header
        table(cellpadding='0', cellspacing='0', width='100%')
            tr
            td.header-img
                if !bookData.Template.Opcoes['Template Boxnet']
                    img(src=`${bookData.template.config.urlPage}/BookContents/Clientes/${bookData.Template.IdProdutoMvc}/img/header.png${template.config.versao}`, alt='')
                if bookData.Template.Opcoes['Template Boxnet']
                    img(src=`${bookData.template.config.urlPage}/BookContents/Clientes/0/img/header.png${bookData.template.config.versao}`, alt='')
    tr
        td.template-botoes
        table(cellpadding='0', cellspacing='0', width='100%')
            tr
            td.data-book
                div #{bookData.DataCadastro}
            td.botoes(width='100')
            if bookData.template.navegadoresAntigos
                a(href=`${template.config.urlPage}/Visualizar/?b=${template.config.idBookVersao}&p=${bookData.IdProduto}&pmvc=${bookData.Template.IdProdutoMvc}`)
                | ver todas
            if !bookData.template.navegadoresAntigos
                a(href=`${template.config.urlVis}/?idBook=${template.config.idBook}&idProdutoMvc=${bookData.Template.IdProdutoMvc}&idNoticia=0`)
                | ver todas
            td.botoes(width='100')
                a(href=bookData.UrlGerarPdf)
                | gerar pdf